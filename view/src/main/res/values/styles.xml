<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--  是否是黑白模式  -->
    <attr name="isGrayMode" format="boolean" />

    <!-- 类型 -->
    <attr name="cornerType" format="enum">
        <enum name="top" value="0" />
        <enum name="left" value="1" />
        <enum name="right" value="2" />
        <enum name="bottom" value="3" />
        <enum name="rectangle" value="4" />
        <enum name="circle" value="5" />
    </attr>
    <!--  圆角  -->
    <attr name="cornerRadius" format="dimension" />


    <!-- 字体颜色 -->
    <attr name="textColor" format="color" />
    <!-- 按下颜色 -->
    <attr name="textPressedColor" format="color" />
    <!-- 不可用颜色 -->
    <attr name="textDisabledColor" format="color" />


    <!-- 渐变颜色方向 -->
    <attr name="backgroundColorOrientation" format="enum">
        <enum name="horizontal" value="0" />
        <enum name="vertical" value="1" />
    </attr>
    <!-- 默认背景色 -->
    <attr name="backgroundColors" format="string" />
    <!-- 按下背景色 -->
    <attr name="backgroundPressedColors" format="string" />
    <!-- 不可用背景色 -->
    <attr name="backgroundDisabledColors" format="string" />


    <!-- stroke 宽度 -->
    <attr name="strokeWidth" format="dimension" />
    <attr name="strokePressedWidth" format="dimension" />
    <attr name="strokeDisabledWidth" format="dimension" />
    <!-- stroke 颜色 -->
    <attr name="strokeColor" format="color" />
    <attr name="strokePressedColor" format="color" />
    <attr name="strokeDisabledColor" format="color" />
    <!--    &lt;!&ndash; stroke 间隙 &ndash;&gt;-->
