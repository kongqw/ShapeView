<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 类型 -->
    <attr name="cornerType" format="enum">
        <enum name="rectangle" value="0" />
        <enum name="top" value="1" />
        <enum name="left" value="2" />
        <enum name="right" value="3" />
        <enum name="bottom" value="4" />
        <enum name="circle" value="5" />
    </attr>
    <!--  圆角  -->
    <attr name="cornerRadius" format="dimension" />

    <!-- CustomCorner -->
    <declare-styleable name="CustomCorner">
        <!-- 圆角类型 -->
        <attr name="cornerType" />
        <!-- 圆角大小 -->
        <attr name="cornerRadius" />
    </declare-styleable>


    <!-- 类型 -->
    <attr name="backgroundColorType" format="enum">
        <enum name="solid" value="0" />
        <enum name="gradient" value="1" />
    </attr>
    <!-- 渐变颜色方向 -->
    <attr name="backgroundColorOrientation" format="enum">
        <enum name="horizontal" value="0" />
        <enum name="vertical" value="1" />
    </attr>
    <!-- CustomBackground -->
    <declare-styleable name="CustomBackground">
        <!-- 背景类型 -->
        <attr name="backgroundColorType" />
        <!-- 背景类型 -->
        <attr name="backgroundColorOrientation" />
        <!-- 默认背景色 -->
        <attr name="backgroundColor1" format="color" />
        <attr name="backgroundColor2" format="color" />
        <attr name="backgroundColor3" format="color" />
        <attr name="backgroundColor4" format="color" />
        <attr name="backgroundColor5" format="color" />
        <!-- 按下背景色 -->
        <attr name="backgroundPressColor1" format="color" />
        <attr name="backgroundPressColor2" format="color" />
        <attr name="backgroundPressColor3" format="color" />
        <attr name="backgroundPressColor4" format="color" />
        <attr name="backgroundPressColor5" format="color" />
        <!-- 不可用背景色 -->
        <attr name="backgroundDisableColor1" format="color" />
        <attr name="backgroundDisableColor2" format="color" />
        <attr name="backgroundDisableColor3" format="color" />
        <attr name="backgroundDisableColor4" format="color" />
        <attr name="backgroundDisableColor5" format="color" />
    </declare-styleable>

    <!-- CustomGradientTextColor -->
    <declare-styleable name="CustomGradientTextColor">
        <!-- 按下颜色 -->
        <attr name="pressColor" format="color" />
        <!-- 不可用颜色 -->
        <attr name="disableColor" format="color" />
    </declare-styleable>


</resources>